<% was_validated = comment.errors.any? %>

<%= form_with(model: comment, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% item_class = "form-control" %>
    <% item_was_invalid = comment.errors.include?(:item) %>

    <% if was_validated %>
      <% if item_was_invalid %>
        <% item_class << " is-invalid" %>
      <% else %>
        <% item_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :item_id %>
    <%= f.collection_select :item_id, Item.all, :id, :to_s, {}, class: "form-control" %>
    <% if item_was_invalid %>
      <% comment.errors.full_messages_for(:item).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% commentor_class = "form-control" %>
    <% commentor_was_invalid = comment.errors.include?(:commentor) %>

    <% if was_validated %>
      <% if commentor_was_invalid %>
        <% commentor_class << " is-invalid" %>
      <% else %>
        <% commentor_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :commentor_id %>
    <%= f.collection_select :commentor_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if commentor_was_invalid %>
      <% comment.errors.full_messages_for(:commentor).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% comment_text_class = "form-control" %>
    <% comment_text_was_invalid = comment.errors.include?(:comment_text) %>

    <% if was_validated %>
      <% if comment_text_was_invalid %>
        <% comment_text_class << " is-invalid" %>
      <% else %>
        <% comment_text_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :comment_text %>
    <%= f.text_field :comment_text, class: comment_text_class, placeholder: "Enter comment text" %>
    <% if comment_text_was_invalid %>
      <% comment.errors.full_messages_for(:comment_text).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
